{
    "manifest_version": 2,
    "name": "Color-Picker",
    "version": "0.1",
    "description": "Grab a color from a webpage",
  
    "permissions": [
      "activeTab",
      "tabs",
      "storage"
    ],
  
    "icons": {
      "48": "icons/picker-48.png",
      "96": "icons/picker-96.png"
    },
  
    "browser_specific_settings": {
      "gecko": {
        "id": "{957cc8aa-2db6-40c1-b3a5-720cce0f97f0}"
      }
    },
  
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
  
    "browser_action": {
      "default_icon": {
        "48": "icons/picker-48.png",
        "96": "icons/picker-96.png"
      },
      "default_title": "Activate Color Picker",
      "default_popup": "popup.html"
    }
  }
  